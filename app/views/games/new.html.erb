<h1>New game</h1>

<% form_for(@game) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :time %><br />
    <%= f.text_field :time %>
  </p>
  <p>
    <%= f.label :board_width %><br />
    <%= f.text_field :board_width %>
  </p>
  <p>
    <%= f.label :board_height %><br />
    <%= f.text_field :board_height %>
  </p>
  <p>
    <%= f.label :first_player_id %><br />
    <%= f.text_field :first_player_id %>
  </p>
  <p>
    <%= f.label :second_player_id %><br />
    <%= f.text_field :second_player_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', games_path %>
