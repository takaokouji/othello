<% form_for(@player) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.check_box :enable %>
    <%= f.label :enable, "有効／無効" %><br />
  </p>
  <p>
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :ai, "AI" %><br />
    <%= f.text_area :ai, { "rows" => 15, "cols" => 80 } %>
  </p>
  <p>
    <%= f.submit '更新' %> <%= link_to 'キャンセル', @player %>
  </p>
<% end %>
